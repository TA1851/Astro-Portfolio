---
import '../styles/global.css'
---

<header class="bg-slate-700 h-24 fixed top-0 left-0 w-full z-50">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center h-24">
      <!-- 左側のエリア (常に表示) -->
      <div class="flex relative">
        <a href="https://github.com/TA1851" class="text-white hover:text-green-400 transition-colors duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 16 16" fill="currentColor" class="ml-2">
            <path d="M7.976 0A7.977 7.977 0 0 0 0 7.976c0 3.52 2.3 6.507 5.431 7.584.392.049.538-.196.538-.392v-1.37c-2.201.49-2.69-1.076-2.69-1.076-.343-.93-.881-1.175-.881-1.175-.734-.489.048-.489.048-.489.783.049 1.224.832 1.224.832.734 1.223 1.859.88 2.3.685.049-.538.293-.88.489-1.076-1.762-.196-3.621-.881-3.621-3.964 0-.88.293-1.566.832-2.153-.05-.147-.343-.978.098-2.055 0 0 .685-.196 2.201.832.636-.196 1.322-.245 2.007-.245s1.37.098 2.006.245c1.517-1.027 2.202-.832 2.202-.832.44 1.077.147 1.908.098 2.11a3.16 3.16 0 0 1 .832 2.153c0 3.083-1.86 3.719-3.62 3.915.293.245.538.734.538 1.468v2.202c0 .196.147.44.538.392A7.98 7.98 0 0 0 16 7.976C15.951 3.572 12.38 0 7.976 0z"/>
          </svg>
        </a>
      </div>

      <!-- ハンバーガーメニュー (スマホのみ表示) -->
      <div class="md:hidden">
        <button id="menu-toggle" class="text-white p-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- 通常のナビゲーション (PCのみ表示) -->
      <nav class="hidden md:block w-full">
        <ul class="flex space-x-8 text-white text-2xl justify-center">
          <li class="current">
            <a href="#home" class="group relative block px-4 py-2 hover:text-green-400 transition-colors">
              HOME
              <span class="absolute bottom-0 left-0 w-full h-0.5 bg-green-400 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></span>
            </a>
          </li>
          <li>
            <a href="#about" class="group relative block px-4 py-2 hover:text-green-400 transition-colors">
              ABOUT
              <span class="absolute bottom-0 left-0 w-full h-0.5 bg-green-400 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></span>
            </a>
          </li>
          <li>
            <a href="#works" class="group relative block px-4 py-2 hover:text-green-400 transition-colors">
              WORKS
              <span class="absolute bottom-0 left-0 w-full h-0.5 bg-green-400 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></span>
            </a>
          </li>
          <li>
            <a href="#skills" class="group relative block px-4 py-2 hover:text-green-400 transition-colors">
              SKILLS
              <span class="absolute bottom-0 left-0 w-full h-0.5 bg-green-400 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>

  <!-- モバイルメニュー (最初は非表示) -->
  <div id="mobile-menu" class="md:hidden bg-slate-800 hidden">
    <nav class="container mx-auto px-4 py-3">
      <ul class="flex flex-col space-y-4 text-white">
        <li>
          <a href="#home" class="block px-4 py-2 hover:text-green-400 transition-colors">
            HOME
          </a>
        </li>
        <li>
          <a href="#about" class="block px-4 py-2 hover:text-green-400 transition-colors">
            ABOUT
          </a>
        </li>
        <li>
          <a href="#works" class="block px-4 py-2 hover:text-green-400 transition-colors">
            WORKS
          </a>
        </li>
        <li>
          <a href="#skills" class="block px-4 py-2 hover:text-green-400 transition-colors">
            SKILLS
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // テーマ切り替え
    const themeToggle = document.getElementById('theme-toggle');
    const currentTheme = localStorage.getItem('theme') || 'light';

    // 初期テーマの設定
    document.documentElement.setAttribute('data-theme', currentTheme);

    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

        // テーマの切り替え
        document.documentElement.setAttribute('data-theme', newTheme);
        // ローカルストレージに保存
        localStorage.setItem('theme', newTheme);
      });
    }

    // ハンバーガーメニュー
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');

    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });

      // モバイルメニュー内のリンクをクリックしたらメニューを閉じる
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
        });
      });
    }
  });
</script>