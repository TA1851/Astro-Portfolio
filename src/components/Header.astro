---
import '../styles/global.css'
---

<header class="bg-slate-700 h-24 fixed top-0 left-0 w-full z-50">
  <!-- コンテナを追加してパディングと最大幅を設定 -->
  <div class="container mx-auto px-4">
    <!-- グリッドレイアウトで3つのセクションを配置 -->
    <div class="items-center">
      <!-- 左側のエリア -->
      <div class="flex relative">
        <a href="https://github.com/">
          <img src="data:image/svg+xml;base64," class="fixed top-9 left-7">
        </a>
      </div>
      <!-- TODO: ダークモードの実装 -->
      <!-- <div class="flex relative">
        <div class="flex relative">
          <button id="theme-toggle" class="fixed top-9 left-20">
            <img src="data:image/svg+xml;base64," class="fixed top-9 left-20" alt="Toggle Theme">
          </button>
      </div> -->

      <!-- 中央のナビゲーション -->
      <nav class="justify-self-center mt-6">
        <ul class="flex space-x-8 text-white text-2xl">
          <li class="current">
            <a href="#home" class="group relative block px-4 py-2 hover:text-green-400 transition-colors">
              HOME
              <span class="absolute bottom-0 left-0 w-full h-0.5 bg-green-400 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></span>
            </a>
          </li>
          <li>
            <a href="#about" class="group relative block px-4 py-2 hover:text-green-400 transition-colors">
              ABOUT
              <span class="absolute bottom-0 left-0 w-full h-0.5 bg-green-400 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></span>
            </a>
          </li>
          <li>
            <a href="#works" class="group relative block px-4 py-2 hover:text-green-400 transition-colors">
              WORKS
              <span class="absolute bottom-0 left-0 w-full h-0.5 bg-green-400 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></span>
            </a>
          </li>
          <li>
            <a href="#skills" class="group relative block px-4 py-2 hover:text-green-400 transition-colors">
              SKILLS
              <span class="absolute bottom-0 left-0 w-full h-0.5 bg-green-400 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></span>
            </a>
          </li>
          <li>
            <a href="#contact" class="group relative block px-4 py-2 hover:text-green-400 transition-colors">
              CONTACT
              <span class="absolute bottom-0 left-0 w-full h-0.5 bg-green-400 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const themeToggle = document.getElementById('theme-toggle');
    const currentTheme = localStorage.getItem('theme') || 'light';

    // 初期テーマの設定
    document.documentElement.setAttribute('data-theme', currentTheme);

    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

        // テーマの切り替え
        document.documentElement.setAttribute('data-theme', newTheme);
        // ローカルストレージに保存
        localStorage.setItem('theme', newTheme);
      });
    }
  });
</script>