---
import { imageConfig } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import NAME from '../components/vue/myname.vue';
import ABOUT from '../components/vue/about.vue';
import WORKS from '../components/vue/works.vue';
import SKILL from '../components/vue/skills.vue';

export interface Props {
    title?: string;
}

const { title, ...props } = Astro.props;
---

<html lang="ja" {...props}>
  <head>
    <BaseHead />
  </head>
  <body class="flex flex-col min-h-screen bg-black">
    <Header />
    <main class="container mx-auto px-4">
      <!-- Home Section -->
      <section id='home' class="mt-20 min-h-screen flex items-center justify-center relative">
        <div class="top-72">
          <NAME client:load />
        </div>
      </section>
      <section id="about">
        <ABOUT client:load />
      </section>
      <section id="works" class="mt-10">
        <WORKS client:load />
      </section>
      <section id="skills" class="mt-20">
        <SKILL client:load />
      </section>
      <!-- TODO: Add the contact section -->
      <section id="contact">
      </section>
    </main>
    <Footer />
  </body>
</html>
