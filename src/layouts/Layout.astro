---
import { imageConfig } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import NAME from '../components/vue/myname.vue';
import ABOUT from '../components/vue/about.vue';
import WORKS from '../components/vue/works.vue';
import SKILL from '../components/vue/skills.vue';

export interface Props {
	title?: string;
}

const { title, ...props } = Astro.props;
---

<html lang="ja" {...props}>
  <head>
    <BaseHead />
  </head>
  <body class="flex flex-col min-h-screen">
		<Header />
    <main class="container mx-auto px-4">
      <!-- Home Section
    min-h-screen: 各セクションの最小高さを画面高に設定
    mb-32: セクション間の下マージンを8rem（128px）に設定
    container mx-auto px-4: コンテンツを中央寄せし、左右にパディングを追加
    -->
    <section id='about' class="mt-20 min-h-screen flex items-center justify-center relative">
      <div class="top-72">
        <NAME client:load/>
      </div>
    </section>
		<section>
			<ABOUT client:load/>
		</section>
		<section>
			<WORKS client:load/>
		</section>
		<section>
			<SKILL client:load/>
		</section>
    </main>
    <Footer />
  </body>

  <style>
    h1 {
      font-size: 2rem;
    }

    /* Ensure the body takes up at least the full viewport height */
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      margin: 0;
			background-color: black;
    }

    /* Allow main content to grow and push footer down */
    main {
      flex: 1 0 auto;
    }

    /* Ensure header stays at the top */
    header {
      flex-shrink: 0;
    }

    /* Ensure footer stays at the bottom */
    :global(footer) {
      flex-shrink: 0;
    }
  </style>
</html>
