---
// import { imageConfig } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import NAME from '../components/vue/myname.vue';
import ABOUT from '../components/vue/about.vue';
import WORKS from '../components/vue/works.vue';
import SKILL from '../components/vue/skills.vue';
import { Image } from 'astro:assets';
import portfolio from '../assets/portfolio.png';
import blogsite from '../assets/blog_project.png';


export interface Props {
    title?: string;
}

const { title, ...props } = Astro.props;
---

<html lang="ja" {...props}>
  <head>
    <BaseHead />
  </head>
  <body class="flex flex-col min-h-screen bg-gray-900">
    <Header />
    <main class="container mx-auto px-4">
      <!-- Home Section -->
      <section id='home' class="mt-20 min-h-screen flex items-center justify-center relative">
        <div class="top-72">
          <NAME client:load />
      </section>
      <section id="about">
        <ABOUT client:load />
      </section>
      <section id="works">
        <div class="container mx-auto">
          <div
            data-aos="fade-left"
            data-aos-duration="1800"
            data-aos-delay="400"
            data-aos-once="true"
            class="mt-36 mb-36"
          >
            <h2 class="secondary-title text-center custom:mx-5 text-5xl text-green-300">WORKS</h2>
          </div>
          <div
            data-aos="fade-left"
            data-aos-duration="1800"
            data-aos-delay="1000"
            data-aos-once="true"
            class="
              flex flex-col md:flex-row items-center gap-8 mb-16
            ">
            <div class="w-full md:w-1/2">
              <Image
                src={portfolio}
                alt="My Image"
                class="rounded-lg shadow-lg w-full"
                width={500}
                height={500}
                loading="lazy"
              />
            </div>
            <div class="w-full md:w-1/2">
              <h3 class="text-2xl font-bold text-white mb-4">プロジェクト名：ポートフォリオサイト</h3>
              <p class="text-gray-300 mb-4">
                このプロジェクトでは、Astro.jsを使って開発を行いました。<br>
                Vue3、AOS(Animate On Scroll Library)、Tailwind CSSを使用しています。
              </p>
              <div class="flex gap-2 mb-4">
                <span class="px-3 py-1 bg-purple-600 text-white text-sm rounded-full">Astro.js</span>
                <span class="px-3 py-1 bg-teal-600 text-white text-sm rounded-full">Vue3</span>
                <span class="px-3 py-1 bg-yellow-600 text-white text-sm rounded-full">Vue Aos</span>
                <span class="px-3 py-1 bg-blue-600 text-white text-sm rounded-full">Tailwind</span>
              </div>

              <!-- TODO: githubのURLを入力する -->
              <a href="https://github.com/TA1851/Astro-Portfolio" class="text-green-400 hover:underline">
                ブログサービス →
              </a>
              <br>
              <a href="https://github.com/TA1851/blog-api-main" class="text-green-400 hover:underline">
                GitHubで見る（バックエンド） →
              </a>
              <br>
              <a href="https://github.com/TA1851/Portfolio-Nextjs" class="text-green-400 hover:underline">
                GitHubで見る（フロントエンド） →
              </a>
            </div>
          </div>
          <div class="flex flex-col md:flex-row items-center gap-8 mb-16">
            <div class="w-full md:w-1/2">
              <Image
                src={blogsite}
                alt="My Image"
                class="rounded-lg shadow-lg w-full"
                width={500}
                height={500}
                loading="lazy"
              />
            </div>
            <div class="w-full md:w-1/2">
              <h3 class="text-2xl font-bold text-white mb-4">プロジェクト名：ブログサービス</h3>
              <p class="text-gray-300 mb-4">
                このプロジェクトでは、バックエンドにPythonのフレームワークのFastAPIを使い、
                フロントエンドにReactとフレームワークのNext.jsを使用し、
                UIコンポーネントライブラリにMUIを使い、CSSフレームワークにはTailwind CSSを使用しています。<br>
              </p>
              <div class="flex gap-2 mb-4">
                <span class="px-3 py-1 bg-purple-600 text-white text-sm rounded-full">Astro.js</span>
                <span class="px-3 py-1 bg-teal-600 text-white text-sm rounded-full">Vue3</span>
                <span class="px-3 py-1 bg-yellow-600 text-white text-sm rounded-full">Vue Aos</span>
                <span class="px-3 py-1 bg-blue-600 text-white text-sm rounded-full">Tailwind</span>
              </div>

              <!-- TODO: githubのURLを入力する -->
              <a href="https://nextjs-app-yvfr.vercel.app/" class="text-green-400 hover:underline">
                GitHubで見る →
              </a>
            </div>
          </div>
        </div>
        <!-- <WORKS client:load /> -->
      </section>
      <section id="skills" class="mt-20">
        <SKILL client:load />
      </section>
      <!-- TODO: Add the contact section -->
      <section id="contact">
      </section>
    </main>
    <Footer />
  </body>
</html>